{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch: Build & Run (Node)",
      "type": "pwa-node",
      "request": "launch",
      "preLaunchTask": "tsc: build",
      "program": "${workspaceFolder}/dist/main.js",
      "cwd": "${workspaceFolder}",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal"
    }
  ]
}
